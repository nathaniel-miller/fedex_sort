      <h2><%= pluralize(sort_type.errors.count, "error") %> prohibited this sort_type from being saved:</h2>

      <ul>
      <% sort_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <table>
      <tbody>
        <tr>
          <td><%= f.label :name %></td>
          <td><%= f.text_field :name %></td>
