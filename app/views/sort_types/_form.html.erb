          <td><%= f.check_box :mon %></td>
          <td>Tue:</td>
          <td><%= f.check_box :tue %></td>
          <td>Wed:</td>
          <td><%= f.check_box :wed %></td>
          <td>Thu:</td>
          <td><%= f.check_box :thu %></td>
          <td>Fri:</td>
          <td><%= f.check_box :fri %></td>
          <td>Sat:</td>
          <td><%= f.check_box :sat %></td>
          <td>Sun:</td>
          <td><%= f.check_box :sun %></td>
        </tr>
      </tbody>
    </table>














    <%= f.submit %>
  </div>
