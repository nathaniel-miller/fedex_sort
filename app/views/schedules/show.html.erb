<p id="notice"><%= notice %></p>

<table>
  <tbody>
    <% @sort_types.each do |sort_type| %>
      <h1><%= sort_type.name %></h1>
      <% sorts = @sorts.where(sort_type_id: sort_type.id) %>
      <% sorts.each do |sort| %>
        <%= sort.date.strftime("%a. %b %d") %>
        <%= sort.start_time.strftime("%H:%M") %>
      <% end %>
    <% end %>
  </tbody>
</table>


