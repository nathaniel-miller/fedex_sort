<p id="notice"><%= notice %></p>

<table>
  <tbody>
    <% @schedule.sorts.each do |sort| %>
      <tr>
        <td>Sort: </td>
        <td><%= sort.sort_type.name %></td>
      </tr>
      <tr>
        <td>Position: </td>
        <td>Team Member: </td>
      </tr>
      <% sort.responsibilities.each do |r| %>
        <tr>
          <td><%= r.position.name  %></td>
          <td><%= r.team_member.try(:full_name) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_schedule_path(@schedule) %> |
<%= link_to 'Back', schedules_path %>
